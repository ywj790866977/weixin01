/**index.wxss**/

.tj-group{
  display: flex;
  flex-wrap: wrap;
}
.tj-group .tj-item{
  width:32%;
  /* height: 300rpx; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size:12px;
  padding:5rpx;
}
.tj-item image{
  width: 100%;
  height:240rpx;
}
.tj-item text{
  padding: 8rpx;
}

/* 最新音乐 */
.cell{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
  font-size:16px;
  background-color:#fff;
  margin: 0 10rpx;
}
.cell .cell-item{
  display: flex;
  flex-direction: column;
  padding:20rpx 20rpx;
}
.cell-item .muisc-desc{
  font-size: 12px;
  color: #888;
}
.cell-item .muisc-name{
  font-size: 17px;
  color: #333;
}
.cell image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}



