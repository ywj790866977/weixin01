    width: 592rpx;
    height: 592rpx;
    position: relative;
    margin: 0 auto;
}
.m-song-disc:after {
    content: " ";
    position: absolute;
    width: 96px;
    height: 137px;
    top: 0;
    left: 133px;
    background-image: url(//s3.music.126.net/m/s/img/needle-ip6.png?be4ebbe…);
    background-size: contain;
    z-index: 5;
}
.m-song-turn {
    width: 100%;
    height: 100%;
